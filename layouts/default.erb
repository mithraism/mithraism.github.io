<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta charset="utf-8">

		<title>Stoneship > <%= @item[:short_title] || @item[:title] %></title>

		<!-- metadata -->
<% if @item[:is_nav_page] %>
		<meta name="ROBOTS" content="NOINDEX, FOLLOW">
<% end %>

		<!-- style -->
		<link rel="stylesheet" type="text/css" href="<%= item_named('/assets/style/screen/').reps[0].path %>" media="screen">
		<link rel="stylesheet" type="text/css" href="<%= item_named('/assets/style/print/').reps[0].path %>"  media="print">

        <!-- fonts -->
        <link href='http://fonts.googleapis.com/css?family=Bree+Serif' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=PT+Sans' rel='stylesheet' type='text/css'>

        <!-- openid -->
		<link rel="openid.server"    href="http://www.myopenid.com/server">
		<link rel="openid.delegate"  href="http://ddfreyne.myopenid.com/">
		<link rel="openid2.provider" href="http://www.myopenid.com/server">
		<link rel="openid2.local_id" href="http://ddfreyne.myopenid.com/">

        <!-- google analytics -->
        <script type="text/javascript">
          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-15639968-2']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();
        </script>
    </head>
    <body>
		<div id="header">
<% if @item[:kind] == 'review' %>
			<h1><%= @item[:subtype].capitalize %> review: <%= @item[:title] %></h1>
<% else %>
			<h1><%= @item[:title] %></h1>
<% end %>
		</div>
		<div id="sidebar">
			<ol id="nav">
				<li><%= link_to_unless_current('home',       '/'           ) %></li>
				<li><%= link_to_unless_current('about',      '/about/'     , :rel => 'me') %></li>
				<li><%= link_to_unless_current('essays',     '/essays/'    ) %></li>
				<li><%= link_to_unless_current('software',   '/software/'  ) %></li>
				<li><%= link_to_unless_current('reviews',    '/reviews/'   ) %></li>
			</ol>
		</div>
		<div id="content">
			<%= render('meta', :item => @item) if %w( article essay ).include?(@item[:kind]) %>
<%= indent(yield, 4) %>
		</div>
		<div id="footer">
            <div class="wrapper">
